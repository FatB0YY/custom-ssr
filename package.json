{
  "name": "custom-ssr",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:client": "vite build --outDir dist/client",
    "watch:client": "vite build --watch --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "watch:server": "vite build --watch --outDir dist/server",
    "start": "node server.js"
  },
  "devDependencies": {
    "@types/express": "^5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
